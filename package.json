{
  "name": "convertit",
  "version": "1.0.5",
  "type": "module",
  "description": "Convert it! The ultimate file conversion toolkit. Create PDFs, Word docs, Excel spreadsheets, and more with a simple, chainable API.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./converters": {
      "import": "./dist/converters/index.js",
      "require": "./dist/converters/index.js",
      "types": "./dist/converters/index.d.ts"
    },
    "./transformers": {
      "import": "./dist/transformers/index.js",
      "require": "./dist/transformers/index.js",
      "types": "./dist/transformers/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun run clean && bun run build:types && bun run build:bundle",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:bundle": "bun build ./src/index.ts --outdir ./dist --target node --format esm && bun build ./src/index.ts --outdir ./dist --target node --format cjs --outfile dist/index.js",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "clean": "rm -rf dist",
    "prepare": "husky || true",
    "release": "bun run build && npm publish",
    "docs": "typedoc --out docs src/index.ts"
  },
  "keywords": [
    "pdf",
    "word",
    "excel",
    "xlsx",
    "docx",
    "csv",
    "html",
    "markdown",
    "converter",
    "file-conversion",
    "document",
    "spreadsheet",
    "compress",
    "merge",
    "split",
    "watermark",
    "encrypt",
    "template",
    "generator",
    "report",
    "invoice",
    "export",
    "convertit",
    "document-generator",
    "pdf-generator",
    "excel-generator"
  ],
  "author": "suraj-9849",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/suraj-9849/convertit"
  },
  "bugs": {
    "url": "https://github.com/suraj-9849/convertit/issues"
  },
  "homepage": "https://github.com/suraj-9849/convertit#readme",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/archiver": "^6.0.2",
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "@types/pdfkit": "^0.17.4",
    "@types/uuid": "^11.0.0",
    "archiver": "^6.0.1",
    "convertit": "^1.0.1",
    "csv-parse": "^5.5.2",
    "csv-stringify": "^6.4.4",
    "docx": "^9.5.1",
    "exceljs": "^4.4.0",
    "jszip": "^3.10.1",
    "mammoth": "^1.6.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.14.0",
    "sharp": "^0.33.0",
    "uuid": "^13.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
